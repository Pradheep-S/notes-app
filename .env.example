# ==============================================
# NOTES APP ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# ==============================================
# FIREBASE CONFIGURATION
# ==============================================

# Firebase Project Settings
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_REGION=us-central1

# Firebase Web App Configuration (for admin dashboard)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# Firebase Admin SDK (for backend)
FIREBASE_ADMIN_SDK_KEY_PATH=./path/to/service-account-key.json
# Alternative: Use the JSON content directly (base64 encoded)
FIREBASE_ADMIN_SDK_JSON=base64-encoded-service-account-json

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Firestore Settings
FIRESTORE_DATABASE_ID=(default)

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# API Security
API_SECRET_KEY=your-api-secret-key-for-internal-communication
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key
STORAGE_ENCRYPTION_PASSWORD=your-secure-storage-password

# ==============================================
# THIRD-PARTY SERVICES
# ==============================================

# Google Cloud APIs
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./path/to/gcp-service-account.json

# Google Drive API (for PDF storage/sync)
GOOGLE_DRIVE_API_KEY=your-google-drive-api-key
GOOGLE_DRIVE_CLIENT_ID=your-oauth-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-oauth-client-secret

# Google OAuth (for user authentication)
GOOGLE_OAUTH_CLIENT_ID=your-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-oauth-client-secret
GOOGLE_OAUTH_REDIRECT_URL=http://localhost:3000/auth/callback

# ==============================================
# PAYMENT & IN-APP PURCHASES
# ==============================================

# Apple App Store
APPLE_APP_STORE_CONNECT_KEY_ID=your-app-store-key-id
APPLE_APP_STORE_CONNECT_ISSUER_ID=your-issuer-id
APPLE_APP_STORE_CONNECT_PRIVATE_KEY_PATH=./path/to/apple-private-key.p8

# Google Play Store
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY_PATH=./path/to/google-play-service-account.json
GOOGLE_PLAY_PACKAGE_NAME=com.yourcompany.notesapp

# Stripe (for web payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ==============================================
# EMAIL & NOTIFICATIONS
# ==============================================

# SendGrid (for transactional emails)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Notes App

# Firebase Cloud Messaging (for push notifications)
FCM_SERVER_KEY=your-fcm-server-key

# ==============================================
# FILE STORAGE & CDN
# ==============================================

# Cloud Storage
STORAGE_BUCKET=your-storage-bucket-name
STORAGE_REGION=us-central1

# CDN Configuration
CDN_BASE_URL=https://cdn.yourdomain.com
MAX_FILE_SIZE_MB=50

# PDF Processing
PDF_PROCESSING_TIMEOUT_MS=30000
MAX_PDF_PAGES=1000

# ==============================================
# ENVIRONMENT SPECIFIC
# ==============================================

# Application Environment
NODE_ENV=development
APP_ENV=development

# Backend Configuration
BACKEND_PORT=5001
BACKEND_HOST=localhost
BACKEND_BASE_URL=http://localhost:5001

# Admin Dashboard Configuration
ADMIN_PORT=3000
ADMIN_BASE_URL=http://localhost:3000

# Mobile App Configuration
MOBILE_API_BASE_URL=http://localhost:5001
MOBILE_DEBUG_MODE=true

# ==============================================
# LOGGING & MONITORING
# ==============================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXX-X

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================

# Test Database
TEST_DATABASE_URL=your-test-database-url

# Mock Services (set to true in development)
MOCK_PAYMENTS=true
MOCK_EMAIL=true
MOCK_PUSH_NOTIFICATIONS=true

# Debug Flags
DEBUG_SQL=false
DEBUG_FIREBASE=false
DEBUG_NETWORK=false

# ==============================================
# RATE LIMITING & QUOTAS
# ==============================================

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_UPLOADS_PER_USER_PER_DAY=50
MAX_STORAGE_PER_USER_GB=5

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable/Disable Features
FEATURE_PDF_ANNOTATION=true
FEATURE_COLLABORATIVE_EDITING=false
FEATURE_OFFLINE_SYNC=true
FEATURE_PREMIUM_FEATURES=true
FEATURE_ADMIN_ANALYTICS=true

# ==============================================
# SECURITY HEADERS & POLICIES
# ==============================================

# Content Security Policy
CSP_REPORT_URI=https://yourdomain.com/csp-report
CSP_REPORT_ONLY=true

# CORS Configuration
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# ==============================================
# BACKUP & RECOVERY
# ==============================================

# Backup Configuration
BACKUP_STORAGE_BUCKET=your-backup-bucket
BACKUP_SCHEDULE_CRON=0 2 * * *
BACKUP_RETENTION_DAYS=30
