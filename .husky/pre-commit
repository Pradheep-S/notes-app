#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run lint-staged for JavaScript/TypeScript projects
npx lint-staged

# Run Flutter analyze for mobile project (only if Flutter is installed)
if command -v flutter >/dev/null 2>&1; then
  echo "ğŸ” Analyzing Flutter code..."
  cd mobile && flutter analyze
  if [ $? -ne 0 ]; then
    echo "âŒ Flutter analysis failed. Please fix the issues before committing."
    exit 1
  fi
else
  echo "âš ï¸  Flutter not found in PATH, skipping Flutter analysis"
fi

echo "âœ… Pre-commit checks passed!"
