rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Notes are private to each user
    match /notes/{noteId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // PDF files are private to each user
    match /pdfs/{pdfId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Content collection for admin-managed content
    match /content/{contentId} {
      // Public read access for published content
      allow read: if resource.data.status == 'published';
      // Premium content requires authentication and premium access
      allow read: if resource.data.status == 'published' && 
        resource.data.isPremium == true && 
        request.auth != null && 
        (request.auth.token.premium == true || request.auth.token.admin == true);
      // Admin full access
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
      allow create: if request.auth != null && 
        request.auth.token.admin == true &&
        request.resource.data.keys().hasAll(['title', 'description', 'subject', 'semester', 'tags', 'fileUrls', 'isPremium', 'status', 'createdBy', 'createdAt']) &&
        request.resource.data.status in ['draft', 'published'] &&
        request.resource.data.createdBy == request.auth.uid;
    }
    
    // Admin users can access admin data
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Public read-only data
    match /public/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }
  }
}
